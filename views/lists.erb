<ul id="lists">
  <% @lists.each_with_index do |list, idx| %>
    <% if list[:todos].all? { |todo| todo[:completed] == true } %>
      <li class="complete">
    <% else %>
      <li>
    <% end %>
        <a href="/lists/list/<%= idx %>">
          <h2><%= list[:name] %></h2>
          <p><%= list[:todos].count { |todo| todo[:completed] == true} %>/<%= list[:todos].size %></p>
        </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>